# ZETA AI - BACKEND ENVIRONMENT VARIABLES
# Bu dosyayı .env olarak kaydet ve bilgileri doldur

# GROQ API Key (zorunlu)
GROQ_API_KEY=gsk_your_actual_groq_api_key_here

# Server Port
PORT=3001

# Environment
NODE_ENV=production

# Frontend URL (CORS için)
FRONTEND_URL=http://www.alzeta.site

# Rate Limiting (opsiyonel)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (opsiyonel)
LOG_LEVEL=info
